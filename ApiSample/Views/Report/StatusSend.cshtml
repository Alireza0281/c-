@model ApiSample.Models.ViewModel.ReportViewModel
@{
    ViewBag.Title = " ارسال پیامک ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--simplesend--------------------------------------------------------------------------------------------------------------------------------->
<div class="row">
    <div class="col-md-12 col-sm-12 top-2">
        <p class="heder" id="simplesend"> وضعیت ارسال پیامک ها</p>
        <div class="form-horizontal">
            @if (TempData["Massage"] != null)
            {
                <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12   padding-right-0 padding-left-0  float-right   ">
                        @Html.Raw(TempData["Massage"])
                    </div>
                </div>
            }

            @using (Html.BeginForm("StatusSend", "Report", new { area = string.Empty }, FormMethod.Post, htmlAttributes: new { @class = "margin-bottom-0", @id = "" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="control-label col-md-2  col-sm-12 margin-bottom-6 text-right padding-top-5">@Html.DisplayNameFor(model => model.ApiKey)</label>
                    <div class="col-md-5 col-sm-12">
                        @Html.TextAreaFor(model => model.ApiKey, htmlAttributes: new { @class = "form-control ltr", type = "", @id = "", required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2  col-sm-12 margin-bottom-6 text-right padding-top-5">@Html.DisplayNameFor(model => model.MessageIds)</label>
                    <div class="col-md-5 col-sm-12">
                        @Html.TextAreaFor(model => model.MessageIds, htmlAttributes: new { @class = "form-control", type = "", @id = "", required = "required", rows = "5" })
                        <div class="help-block"> شناسه ها را با Enter از هم جدا نمایید.  </div>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-md-8 col-md-offset-2   ">
                        <button id="" href="#" class="btn btn-success" type="submit">
                            <i class="fa fa-send"></i>
                            <span>ارسال اطلاعات</span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

